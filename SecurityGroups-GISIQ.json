                 {
                    "IpProtocol" : "tcp",
                    "FromPort" : "80",
                    "ToPort" : "80",
                    "CidrIp" : "10.0.0.0/8",
                    "Description" : "Contractor VPN to 80"
                 },
                 {
                    "IpProtocol" : "tcp",
                    "FromPort" : "80",
                    "ToPort" : "80",
                    "CidrIp" : "10.205.31.0/24",
                    "Description" : "Contractor VPN to 80"
