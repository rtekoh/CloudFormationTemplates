                },
                {
                    "IpProtocol" : "tcp",
                    "FromPort" : "3389",
                    "ToPort" : "3389",
                    "CidrIp" : "192.168.42.0/24",
                    "Description" : "RDP to onprem"
                }
            ],
                "Tags" : [{"Key" : "Name", "Value" : { "Fn::Join" : [ "", [ "A",
                    { "Ref" : "CountryCode" },
                    { "Ref" : "RegionCode" },
                    "GPOPASG" ,
                    { "Ref" : "Environment" },
